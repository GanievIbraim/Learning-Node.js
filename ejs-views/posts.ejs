<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<style>
    /* Начало */
* {
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans';
    margin: 0;
    padding: 0;
}

body {
    color: white;
    background: rgb(131, 58, 180);
    background: linear-gradient(315deg, rgba(131, 58, 180, 1) 0%, rgba(29, 201, 253, 1) 50%, rgba(69, 78, 252, 1) 100%);
}

.father {
    height: 90vh;
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 3rem;
    flex-wrap: wrap;
    flex-direction: column;
    align-content: center;
}

.menu {
    padding-top: 20px;
    height: 10vh;
    text-align: right;
}

a {
    color: white;
    font-weight: 700;
    text-decoration: none;
    font-size: 2rem;
    margin-right: 30px;
}

/* Конец */

.listPost {
    width: 100%;
    height: 90vh;
    color: white;
    position: relative;
}

h1 {
    margin-top: 20px;
    margin-left: 5%;
    color: white;
    top: 0;
    left: 0;
}

.post_1 {
    padding: 1%;
    border-radius: 10px;
    margin-top: 3px;
    left: 5%;
    right: 5%;
    position: absolute;
    width: 90%;
    background: white;
    color: black;
}

h6,
.post_1 h1 {
    margin: 0px;
    color: rgb(22, 22, 22);
}

.post_1 p {
    margin-top: 10px;
}

.button {
    margin-right: 1%;
    margin-bottom: 1%;
    box-sizing: border-box;
    right: 0.5%;
    bottom: 1%;
    position: absolute;
}

input{
    font-weight: 200;
    font-size: 1.2rem;
    padding-left: 9px;
    padding-right: 9px;
    height: 2.3rem;
    border: 2px black solid;
    border-radius: 4px;
    background: white;
}

input:hover{
    transition: all 0.2s;
    box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);
}

</style>

<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="listPost">
        <div class="post_1">
            <% if (posts.length) { %>
                <% posts.forEach( ({ id, title, date, text }) => { %>

            <h1><%= title%></h1>
            <h6><%= date%></h6>
            <p style="font-size: 1.3rem;"><%= text%></p>
            <a href="/posts/<%= id%>"><input type="button" value="MORE" class="button"></a>
            
                <% }) %>
            <% } %> 

            
        </div>
    </div>
</body>

</html>